{
  "name": "windows-orchestrator",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Desktop automation orchestrator with recursive testing capabilities",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:dev": "npm run build && node dist/index.js",
    "test": "npm run build && npm run test:verify",
    "test:verify": "node dist/index.js --test-mode",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "automation",
    "orchestrator",
    "desktop",
    "recursive-testing",
    "ai"
  ]
}
